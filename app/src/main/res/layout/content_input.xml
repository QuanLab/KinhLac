            <EditText
                android:id="@+id/EditTextBangQuang"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/ben_trai"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/EditTextBangQuang_"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/ben_phai"
                android:inputType="numberDecimal" />

        </LinearLayout>

        <LinearLayout
