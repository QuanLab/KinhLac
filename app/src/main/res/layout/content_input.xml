        </LinearLayout>

        <Button
            android:id="@+id/btnKetQuaBang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ket_qua_bang"
            android:nestedScrollingEnabled="false"
            android:onClick="onClick" />
        <Button
            android:id="@+id/btnXemBieuDo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/xem_bieu_do"
            android:onClick="onClick" />
    </LinearLayout>

</ScrollView>